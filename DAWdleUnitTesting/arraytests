#include "pch.h"
#include "../src/SerializeTools.h"
#include "../src/DrillLib.h"

namespace Array {
	struct Testing {
		U32 numberindex;
		U32 number;
		U64 largenum;
	};
	ArenaArrayList<Testing> test;

	TEST(Pushback_Contains, Single) {
		Testing& Tester = test.push_back();
		EXPECT_TRUE(test.contains(Tester));
	}

	TEST(Popback, Single) {
		Testing& Tested = test.push_back();
		Testing& Tested = test.pop_back();
		EXPECT_FALSE(test.contains(Tested));
	}

	TEST(Empty, IsEmpty) {
		EXPECT_TRUE(test.empty());
	}

	TEST(Empty, IsNotEmpty) {
		Testing& Tested = test.push_back();
		EXPECT_TRUE(test.empty());
	}

	TEST(Last, CheckLast) {
		Testing& Tested = test.push_back();
		EXPECT_EQ(test.last(), Tested);
	}

}
